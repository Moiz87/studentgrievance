        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Mail id"
        android:inputType="textPersonName"
        />

    <Button
        android:id="@+id/btngetpwd"
